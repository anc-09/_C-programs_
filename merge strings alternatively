#include<iostream>
#include<string>
using namespace std;
int main(){
        string word1,word2;
        cin>>word1>>word2;
        string merged;
        int i=0,j=0;
        while(i<word1.length()||j<word2.length()){
            if(i<word1.length()){
                merged+=word1[i];
                i++;
            }
            if(j<word2.length()){
                merged+=word2[j];
                j++;
            }
        }
        cout<<merged;
        return 0;
}
